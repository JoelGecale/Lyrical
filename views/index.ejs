<!DOCTYPE html>
<html lang="en">
  <%- include("partials/title.ejs") %>

  <body class="d-flex flex-column min-vh-100">

    <%- include("partials/header.ejs") %>

    <main>
      <div class="container w-50 m-auto mt-5">
        <form action="/submit" method="POST">
          <h4 class="h4 mb-3 fw-normal">Please input the details below</h4>

          <div class="form-floating py-2">
            <input
              type="text"
              class="form-control"
              id="floatingInput"
              placeholder="Artist"
              name="artist"
            />
            <label for="floatingInput">Artist</label>
          </div>
          <div class="form-floating py-2">
            <input
              type="text"
              class="form-control"
              id="floatingInput"
              placeholder="Song Title"
              name="title"
            />
            <label for="floatingInput">Song Title</label>
          </div>
          <button class="btn btn-outline-success py-2" type="submit">
            Submit
          </button>
        </form>

        <% if (locals.lyrics) { %>
        <div class="border mt-5 py-3 w-100">
          <textarea class="w-100 px-3" rows="15" disabled>
<%= lyrics %></textarea
          >
        </div>
        <% } %>
      </div>
    </main>

    <%- include("partials/footer.ejs") %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
